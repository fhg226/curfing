<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.curfing.mapper.BoardMapper">

	<select id="getList" resultType="com.curfing.domain.BoardVO">
		<![CDATA[
			select * from cafe_r where bno > 0 
		]]>
	</select>
	
	<sql id="criteria">
	 <trim prefix="AND (" suffix=")" prefixOverrides="OR">
	 <!-- prefixOverrides suffix가 실행되고 prefix가 추가로 실행 될때 들어가는 문장 -->
	  <foreach item='type' collection="typeArr">
	   <trim prefix="OR">
	   	<choose>
	   	 <when test="type == 'T'.toString()">
		 	cafename like '%'||#{keyword}||'%'
		 </when>
		 <when test="type == 'C'.toString()">
		 	address like '%'||#{keyword}||'%'
		 </when>
		 <when test="type == 'W'.toString()">
			cafeinfo like '%'||#{keyword}||'%'
		 </when>
	   	</choose>
	   </trim>
	  </foreach>
	 </trim>
	</sql>

	<!-- 게시물 목록(페이징) -->
	<select id="getListWithPaging" resultType="com.curfing.domain.BoardVO">
	<![CDATA[
	select bno, cafename, address, phone, cafeinfo, price, car, opentime, dayoff
		from(
			select /*+INDEX_DESC(cafe_r SYS_C007208)*/
			rownum rn, bno, cafename, address, phone, cafeinfo, price, car, opentime, dayoff
			from cafe_r
			where rownum <= #{pageNum} * #{amount}
	]]>
			<if test="keword != null">
				<include refid ="criteria"></include> <!-- 재사용 하기 -->
			</if>
			
			
	<![CDATA[		
		)
		where rn > (#{pageNum} - 1) * #{amount}
	]]>	
	
</select>



	<insert id="insert">
 	insert into cafe_r(rno,bno,cafaname,address,phone,reply,price,car,opentime,dayoff,image,cafeid)
 	values(#{rno},seq_board.nextval,#{cafaname},#{address},#{phone},#{reply},#{price},#{car},#{opentime},#{dayoff},#{image},#{cafeid}) 
		<!-- #  = ${}랑 같은것 -->
	</insert>
	
	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		insert into cafe_r(rno,bno,cafaname,address,phone,reply,price,car,opentime,dayoff,image,cafeid)
		values(#{rno},#{bno},#{cafaname},#{address},#{phone},#{reply},#{price},#{car},#{opentime},#{dayoff},#{image},#{cafeid})
	</insert>
	
	<select id="read" resultType="com.curfing.domain.BoardVO">
		select * from t_board where bno = #{bno}
	</select>
	
	<delete id="delete">
		delete t_board where bno = #{bno}
	</delete>
	
	<update id="update">
		update t_board set title=#{title}, content=#{content}, writer=#{writer},
		 updatedate = sysdate where bno=#{bno}
	</update>
	
	<select id="getTotalCount" resultType="int">
		select count(*) from cafe_r
		
		<if test="keword != null">
			where bno > 0 <include refid ="criteria"></include> <!-- 재사용 하기 -->
		</if>
	
	</select>
	
</mapper>